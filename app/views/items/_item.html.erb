<% if item.name %>
  <li id="item-<%= item.id %>">
    <span class="content"><%= item.name %>
    <%= link_to "", item, method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
    </span>
    <span class="timestamp">
      <%= item.days_left %> days left to complete this task.
      <% if current_user?(item.user) %>
        <%= link_to " | delete now", [item], method: :delete, remote: true, data: { confirm: "Are you sure?"} %>
      <% end %>
    </span>
  </li>
<% end %>  