<% if item.name %>
  <li id="item-<%= item.id %>">
    <span class="content"><%= item.name %>
    <%= link_to "", item, method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
    </span>
    <span class="timestamp">
      Added <%= time_ago_in_words(item.created_at) %> ago.
      <% if current_user?(item.user) %>
        <%= link_to "delete", [item], method: :delete, remote: true, data: { confirm: "Are you sure?"} %>
      <% end %>
    </span>
  </li>
<% end %>  