 <% if @item.valid? %>
   $('.items').append("<%= escape_javascript(render(@item)) %>");
   $('.js-items-count').html("<%= pluralize(@item.user.items.count, 'To-do Item') %>");                                          
   $('.item_form').html("<%= escape_javascript(render partial: 'items/form', locals: { item: @new_item }) %>");

<% else %>
   $('.item_form').html("<%= escape_javascript(render partial: 'items/form', locals: { item: @new_item }) %>");
 <% end %>