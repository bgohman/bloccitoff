<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="item_form">
        <%= render 'items/form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.items.any? %>
      <h3 class='js-items-count'><%= pluralize(@user.items.count, 'To-do Item') %></h3>

        <div class="items">
          <%= render partial: 'items/item', collection: @items %>
        </div>
    
    <% else %>
      <h3>You have nothing to do!</h3>
    <% end %>
  </div>
</div>